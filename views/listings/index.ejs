<% layout("/layouts/boilerplate") %>

<div id="filters-bar">
  <!-- Left Scroll Button -->
  <div
    class="scroll-btn scroll-left"
    onclick="scrollFilters(-200)"
    id="btn-left"
  >
    <i class="fa-solid fa-chevron-left"></i>
  </div>

  <!-- Filters Area -->
  <div class="filters-container">
    <div id="filters-wrapper" onscroll="toggleScrollButtons()">
      <div id="filters">
        <div class="filter">
          <a href="/listing?category=trending">
            <div><i class="fa-solid fa-house-fire"></i></div>
            <p>Trending</p>
          </a>
        </div>
        <div class="filter">
          <a href="/listing?category=rooms">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
          </a>
        </div>
        <div class="filter">
          <a href="/listing?category=iconic city">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
          </a>
        </div>
        <div class="filter">
          <a href="/listing?category=mountains">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
          </a>
        </div>
        <div class="filter">
          <a href="/listing?category=castle">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
          </a>
        </div>
        <div class="filter">
          <a href="/listing?category=amazing pools">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
          </a>
        </div>
        <div class="filter">
          <a href="/listing?category=camping">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
          </a>
        </div>
        <div class="filter">
          <a href="/listing?category=farms">
            <div><i class="fa-solid fa-wheat-awn"></i></div>
            <p>Farms</p>
          </a>
        </div>
        <div class="filter">
          <a href="/listing?category=arctic">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
          </a>
        </div>
        <div class="filter">
          <a href="/listing?category=domes">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
          </a>
        </div>
        <div class="filter">
          <a href="/listing?category=boats">
            <div><i class="fa-solid fa-sailboat"></i></div>
            <p>Boats</p>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Scroll Button -->
  <div
    class="scroll-btn scroll-right"
    onclick="scrollFilters(200)"
    id="btn-right"
  >
    <i class="fa-solid fa-chevron-right"></i>
  </div>

  <!-- Tax Toggle -->
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
        checked
      />
      <label class="form-check-label" for="switchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
</div>

<!-- Listings Grid -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of alllistings) { %>
  <div class="card cols listing-card">
    <a href="/listing/<%=listing._id%>" class="listing-link">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%></b>
          <br />
          &#x24; <%=listing.price.toLocaleString("en-BD")%> /night
          <i class="tax-info">&nbsp; +18% GST</i>
        </p>
      </div>
    </a>
  </div>
  <% } %>
</div>

<script src="/js/indexHome.js"></script>
